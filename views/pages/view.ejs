<% include ../partials/header.ejs %>
<% include ../partials/nav.ejs %>

<main>
    <input type="hidden" id="global-username">
    <section class='container'>
        <div class="col-md-12">
            <h1>Kent's Fancy Wishlist Site</h1>
        </div>
    </section>
    <section class="container">
        <h2>Wishlist for: <%= wishlistUser %></h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Thumb</th>
                    <th>Item</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<items.items.length; i++){ %>
                <tr>
                    <td><img src="<%= items.items[i].thumb %>" class="wishlist-thumb"></td>
                    <td><a href="<%= items.items[i].url %>" target="_blank"><%= items.items[i].name %></a></td>
                    <td><%= items.items[i].price %></td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </section>
</main>


<% include ../partials/footer.ejs %>